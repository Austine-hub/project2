{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* React & JSX */
    "jsx": "react-jsx",

    /* Path aliases (for "@/..." imports) */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    /* Module resolution */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,

    /* Output */
    "noEmit": true
  },
  "include": ["src"],
  "references": []
}


